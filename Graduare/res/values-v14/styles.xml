<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Graduare</item>
    </style>
 
    <!-- ActionBar style -->
    <style name="ActionBar.Solid.Graduare"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/graduare_blue</item>
    </style>
 
    <!-- Main activity theme -->
    <style name="GraduareTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Graduare.NoTitle</item>
    </style>
        
   <!-- Main activity action bar style -->
    <style name="ActionBar.Solid.Graduare.NoTitle" parent="@style/ActionBar.Solid.Graduare">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_logo</item>
    </style>
</resources>
